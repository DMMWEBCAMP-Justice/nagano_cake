<div class="container">
 <div class="row">
  <div class="col-md-12">
   <h2>ショッピングカート</h2>
    <div class="row justify-content-end">
      <div class="col-4">
       <%= link_to cart_items_destroy_all_path, method: :delete, class: 'btn btn-sm btn-danger' do %>
        カートを空にする<% end %>
     </div>
     </div>
     <table class="table table-hover table-inverse">
         <thead>
          <tr>
           <th>商品名</th>
           <th>単価（税抜）</th>
           <th>数量</th>
           <th>小計</th>
           <th></th>
           <th colspan="5"></th>
          </tr>
          <tr>
           <th>合計金額</th>
           <th colspan="2"></th>
          </tr>
         </thead>
         <tbody>

          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= image_tag cart_item.item.get_image, size: "30x30" %><%= cart_item.item.item_name %></td>
              <td><%= cart_item.item.with_tax_price %></td>
              <td><%= cart_item.amount %><br><%=link_to form.select :amount, *[1..3], class: 'btn btn-sm btn-success' do %>変更<% end %></td>
              <td><%= cart_item.subtotal%></td>
              <td><%= link_to cart_item_path(cart_item.id), method: :delete, class: 'btn btn-sm btn-danger' do %>
                   削除する<% end %>
              </td>
            </tr>
            <tr>
             <td><% @合計金額 +=  cart_item.subtotal %></td>
            </tr>
          <% end %>
          </tbody>
         </table>
           <div class="row justify-content-start">
            <div class="col-4">
              <%= link_to root_path, class: 'btn btn-lg btn-primary' do %>
              買い物を続ける <% end %>
            </div>
           </div>
           <div class="row justify-content-center">
             <div class="col-4">
               <%= link_to new_order_path, class: 'btn btn-lg btn-success' do %>
               情報入力に進む <% end %>
              </div>
           </div>
        </div>
      </div>
    </div>










