<div class="col-md-12">
  <h2>ショッピングカート</h2>
     <%= link_to cart_items_destroy_all_path, method: :delete, class: 'btn btn-sm btn-danger' do %>
    　カートを空にする<% end %>
    <table class="table table-hover table-inverse">
     <thead>
      <tr>
       <th>商品名</th>
       <th>単価（税抜）</th>
       <th>数量</th>
       <th>小計</th>
       <th></th>
       <th rowspan="5"></th>
      </tr>
     </thead>
     <tbody>
      
      <% @cart_items.each do |cart_item| %>
        <tr>  
          <td><%= image_tag cart_item.item.get_image_id, size: "30x30" %><%= cart_item.item.item_name %></td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td><%= cart_item.amount %><br><%=link_to form.select :amount, *[1..3], class: 'btn btn-sm btn-success' do %>変更<% end %></td>
          <td><%= cart_item.subtotal%></td>
          <td><%= link_to cart_item_path(cart_item.id), method: :delete, class: 'btn btn-sm btn-danger' do %>
               削除する<% end %>
          </td>
          <% @合計金額 +=  cart_item.subtotal %>
        </tr>
       <% end %>
    　</tbody>
  　</table>
 </div>
     　
        
     　
          
        



  