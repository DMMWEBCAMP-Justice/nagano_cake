<div class="container">
  <div class="row">
    <div>
      <h3>注文履歴詳細</h3>
      <div>
        <table>
          <caption>注文情報</caption>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              〒<%= @order.postcode %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.order_status %></td>
          </tr>
        </table>
        <table>
          <caption>請求合計</caption>
          <tr>
            <th>商品合計</th>
            <td></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td>800</td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td></td>
          </tr>
        </table>
      </div>
      <table>
        <caption>注文内容</caption>
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
        <tr>
          each文
        </tr>
      </table>
    </div>
  </div>
</div>