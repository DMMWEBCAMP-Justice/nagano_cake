<div class="container">
  <div class="row">
    <div>
      <h3 class="col-lg-4 text-center"style="background-color: #efefef">注文履歴詳細</h3>
      <div class="flex">
        <table border="2" width="500">
          <caption>注文情報</caption>
          <tr height="50">
            <th bgcolor="#efefef" width="30%">注文日</th>
            <td width="70%"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr height="50">
            <th bgcolor="#efefef">配送先</th>
            <td>
              〒<%= @order.postcode %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr height="50">
          <tr>
            <th bgcolor="#efefef">支払方法</th>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr height="50">
            <th bgcolor="#efefef">ステータス</th>
            <td><%= @order.order_status %></td>
          </tr>
        </table>
        <table border="2" width="400">
          <caption>請求合計</caption>
          <tr height="50">
            <th  bgcolor="#efefef" width="30%">商品合計</th>
            <td>
              <% @order_details.each do |order_detail| %>
                <% @total_price += order_detail.subtotal %>
              <% end %>
            </td>
          </tr>
          <tr height="50">
            <th bgcolor="#efefef" >配送料</th>
            <td>800</td>
          </tr>
          <tr height="50">
            <th bgcolor="#efefef" >ご請求額</th>
            <td><% @total_price + 800 %></td>
          </tr>
        </table>
      </div>
      <table border="2" width="1000">
        <caption>注文内容</caption>
        <tr bgcolor="#efefef" width="1000">
          <th width="50%">商品</th>
          <th width="30%">単価(税込)</th>
          <th width="10%">個数</th>
          <th width="10%">小計</th>
        </tr>
       <% @order_details.each do |order_detail| %>
         <tr height="50%">
            <td><%= order_detail.item.item_name %></td>
            <td><%= order_detail.price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.subtotal %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>