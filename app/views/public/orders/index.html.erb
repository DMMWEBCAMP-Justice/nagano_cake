<div class="container">
  <div class="row">
    <div>
      <h3>注文履歴一覧</h3>
      <table>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
        <tr>
          <% @Orders.each do |order| %>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              〒<%= order.postcode %><br>
              <%= order.address %><br>
              <% order.name %>
            </td>
            <td></td>
            <td><%= order.total_payment %></td>
            <td><%= order.status %></td>
            <td><%= link_to '表示する', order_path(order), class: "btn btn-primary" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>