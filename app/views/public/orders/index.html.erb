<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h3  class="col-lg-4 text-center"style="background-color: #efefef">注文履歴一覧</h3>
      <table border="2" width="1000">
        <tr bgcolor"#efefef" height="50">
          <th width="10%">注文日</th>
          <th width="50%">配送先</th>
          <th width="10%">注文商品</th>
          <th width="10%">支払金額</th>
          <th width="10%">ステータス</th>
          <th width="10%">注文詳細</th>
        </tr>
        <tr height="50">
          <% @Orders.each do |order| %>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              〒<%= order.postcode %><br>
              <%= order.address %><br>
              <% order.name %>
            </td>
            <td>
              <% order.order_details.items.each do |item| %>
                <%= item.item_name %>
              <%= end %>
            </td>
            <td><%= order.total_payment %></td>
            <td><%= order.status %></td>
            <td><%= link_to '表示する', order_path(order), class: "btn btn-primary" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>