<div class = "container">
  <div class = "row" >
    <div class = "col-8">
     <h3>マイページ</h3>
       <div class = "form-group">
         <div class="text-right"><%= link_to '編集する',edit_end_users_path,class: "btn btn-success"%>
         </div>
       </div>
      <table class = "table table-bordered">
       <tr>
         <th>氏名</th>
         <th><%= @end_user.last_name %><%= @end_user.first_name %></th>
       </tr>
       <tr>
         <th>カナ</th>
         <th><%= @end_user.last_name_kana %><%= @end_user.first_name_kana %></th>
       </tr>
       <tr>
         <th>郵便番号</th>
         <th><%= @end_user.postcode %></th>
       </tr>
       <tr>
         <th>住所</th>
         <th><%= @end_user.address %></th>
       </tr>
       <tr>
         <th>電話番号</th>
         <th><%= @end_user.phone_number %></th>
       </tr>
       <tr>
         <th>メールアドレス</th>
         <th><%= @end_user.email %></th>
       </tr>
      </table>
       <p class="text-right"><%= link_to '配送先一覧を見る',addresses_path(@end_user),class: "btn btn-primary"%></p>
       <p class="text-right"><%= link_to '注文履歴一覧を見る',orders_path(@end_user),class: "btn btn-primary"%></p>
    </div>
  </div>
</div>
