<div class = "container">
  <div class = "row" >
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
     <br><h2>会員情報編集</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="form-group-row">
       <label for="inputname"class="col-sm-3 col-form-label">氏名</label>
       <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
       <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>
      <div class="form-group-row">
       <label for="inputname"class="col-sm-3 col-form-label">フリガナ</label>
       <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
       <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </div>
      <div class="form-group-row">
       <label for="inputpostcode"class="col-sm-3 col-form-label">郵便番号</label>
       <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
      </div>
      <div class="form-group-row">
       <label for="inputaddress"class="col-sm-3 col-form-label">住所</label>
       <%= f.text_field :address, autofocus: true, autocomplete: "address",class: "w-50"%>
      </div>
      <div class="form-group-row">
       <label for="inputphonenumber"class="col-sm-3 col-form-label">電話番号</label>
       <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
      </div>
      <div class="form-group-row">
       <label for="inputemail"class="col-sm-3 col-form-label">メールアドレス</label>
       <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <br><div class="actions">
       <%= f.submit "編集内容を保存",url: end_users_my_page_path,method: :patch,class: "btn btn-success"%>
       <% end %>
      <%= link_to '退会する',end_users_finished_path, class: "btn btn-danger"%>
      </div>

    </div>
  </div>
</div>



