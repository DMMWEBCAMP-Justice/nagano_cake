
<div class = "container">
  <div class = "row" >
    <div class = "col-8">
     <h2>会員情報編集</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field">
       <%= f.label :last_name,'氏名'%>
       <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
       <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>
      <div class="field">
       <%= f.label :last_name_kana,'フリガナ'%>
       <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
       <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </div>
      <div class="field">
       <%= f.label :postcode,'郵便番号'%>
       <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
      </div>
      <div class="field">
       <%= f.label :address,'住所'%>
       <%= f.text_field :address, autofocus: true, autocomplete: "address",class: "w-75"%>
      </div>
      <div class="field">
       <%= f.label :phone_number,'電話番号'%>
       <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
      </div>
      <div class="field">
       <%= f.label :email,'メールアドレス'%>
       <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="actions">
       <%= f.submit "編集内容を保存",url: end_users_my_page_path,method: :patch,class: "btn btn-success"%>
      </div>
       <% end %>
      <div class="action">
      <%= link_to '退会する',end_users_finished_path, class: "btn btn-danger"%>
      </div>

    </div>
  </div>
</div>



