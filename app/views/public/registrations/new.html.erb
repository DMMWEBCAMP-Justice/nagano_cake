<div class="container">
  <div class="row">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
     <br><h2>新規会員登録</h2>

     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <%= render "public/shared/error_messages", resource: resource %>
     <div class="form-row">
      <div class="col-md-4 mb-3">
       <%= f.label :last_name,'名前（姓）'%>
       <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>
      <div class="col-md-4 mb-3">
       <%= f.label :first_name,'     (名)'%>
       <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>
     </div>
      <div class="form-row">
       <div class="col-md-4 mb-3">
       <%= f.label :last_name_kana,'フリガナ(セイ)'%>
       <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
       </div>
       <div class="col-md-4 mb-3">
       <%= f.label :first_name_kana,'  (メイ)'%>
       <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
       </div>
      </div>
     <div class="field">
     <%= f.label :email,'メールアドレス'%><br>
     <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "w-50" %>
      </div>
      <div class="field">
     <%= f.label :postcode,'郵便番号（ハイフンなし）'%><br>
     <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
      </div>
      <div class="field">
      <%= f.label :address,'住所'%><br>
      <%= f.text_field :address, autofocus: true, autocomplete: "address",class: "w-75"%>
       </div>
      <div class="field">
      <%= f.label :phone_number,'電話番号（ハイフンなし）'%><br>
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
       </div>


     <div class="field">
     <%= f.label :password,'パスワード' %>
     <% if @minimum_password_length %>
     <em>(<%= @minimum_password_length %> 文字以上)</em><br>
     <% end %>
     <%= f.password_field :password, autocomplete: "new-password" %>
     </div>

     <div class="field">
     <%= f.label :password_confirmation,'パスワード(確認用)' %><br>
     <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
     </div>

     <div class="actions">
     <br><%= f.submit "新規登録",class: "btn btn-success"%>
     </div>
     <% end %>
     <br><h4>すでに登録済みの方</h4>
     <div><%= render "public/shared/links" %>からログインしてください。</div>

    </div>
  </div>
</div
