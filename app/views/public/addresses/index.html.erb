<h3>配送先登録/一覧</h3>
<%= form_with model: @address do |f| %>
  <p>郵便番号(ハイフンなし)</p>
  <%= f.text_field :postcode %>
  <p>住所</p>
  <%= f.text_field :address %>
  <p>宛名</p>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
<% end %>

<table>
    <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
    </tr>
    <%= @addresses.each do |address| %>
      <tr>
        <td><%= address.postcode %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>編集削除</td>
      </tr>
    <% end %>
</table>