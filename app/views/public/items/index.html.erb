<div class='container'>
   <h2 class="text-secondary">商品一覧</h2><p class="text-secondary">(全<%= @items.count %>件)</p>
   <div class='row m-5'>
         <% @items.each do |item| %>
          <div class="col-md-3">
             <div class= 'card mb-4 border-0' style="width: 18rem;">
              <div class="text-center">
                <%= link_to item_path(item.id) do %>
                <%= image_tag item.image, size: "200x200" %>
                <% end %>
                <p class="text-center"><%= item.item_name %>
                <br>¥<%= item.price %></p>
              </div>
           </div>
           </div>
            <% end %>
        <%= paginate @items %>
  </div>
</div>