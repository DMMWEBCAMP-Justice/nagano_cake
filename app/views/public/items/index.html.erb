<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'public/genres/genre',genres: @genres %>
    </div>
        <div class='d-flex flex-wrap col-md-8 offset-md-1'>
        <h2>商品一覧</h2><p>(全<%= @items.count %>件)</p>
        <table class= 'd-flex flex-wrap'>
          <tbody>
          <tr>
         <% @items.each do |item| %>
          <td><%= link_to item_path(item.id) do %>
                <%= image_tag item.image, size: "180x150" %>
                <% end %></td>
                </tr>
                <tr><td class="text-center"><%= item.item_name %></td></tr>
                <tr><td class="text-center">¥<%= item.price %></td></tr>
            <% end %>
           </tbody>
        </table>
        <%= paginate @items %>
      </div>
  </div>
</div>