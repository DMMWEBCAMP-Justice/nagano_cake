<div class='container'>
   <div class='row'>
          <div class='col-md-3'>
          <%= render 'public/genres/genre',genres: @genres %>
          </div>
     <div class="d-flex align-items-center justify-content-center col-md-6" style="width:100%;">
          <div class="card" style="width: 18rem;">
            <div class="text-center">
            <%= image_tag @item.image, size: "200x200" %>
              <div class="form-group">
               <h2><%= @item.item_name %></h2>
               </div>
              <div class="form-group">
              <%= @item.introduction %>
              </div>
              <div class="form-group">
              ¥<%= @item.with_tax_price %>(税込)
              </div>
              <div class="form-group">
              <%= form_with model: @cart_item, url: cart_items_path, local: true do |f| %>
                <%= f.hidden_field :item_id, :value => @item.id %>
                <%= f.hidden_field :end_user_id, :value => current_end_user.id %>
                <%= f.select :amount, *[1..10] %>
                <%= f.submit "カートに入れる" ,class: 'btn btn-success' %>
              <% end %>
           </div>
        </div>
       </div>
     </div>

  </div>
</div>

