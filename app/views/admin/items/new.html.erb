<div class="container">
  <div class="row">
   <div class="col-sm-12 col-md-10 col-lg-5 px-5 px-sm-0 mx-auto">

    <h1>商品新規登録</h1>

      <%= form_with model: @item, url: admin_items_path, metod: :post do |f| %>
      <div class="form-group">
       <h4>商品画像</h4>
      　<%= f.file_field :image_id, accept: "image/*" %>
     </div>
      <div class="form-group">
       <h4>商品名</h4>
        <%= f.text_field :item_name %>
      </div>
      <div class="form-group">
       <h4>商品説明</h4>
        <%= f.text_area :introduction %>
      </div>
      <div class="form-group">
      　<h4>ジャンル</h4>
        <!--%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, genre_name) %>-->
   　　</div>
      <div class="form-group">
       <h4>税抜価格</h4>
        <%= f.text_area :price %>円
      </div>
      <div class="form-group">
       <%= form_with(model: @item, local: true) do |form| %>
  　　　　　<div class="item_status">
       　　<h4><%= form.label :販売ステータス %></h4>
       　　 <div>
      　    <%= form.radio_button :item_status, true %>
      　    <%= form.label :"販売中", '販売中', value: true %>
      　　　　<%= form.radio_button :item_status, false %>
      　　　　<%= form.label :"販売停止中", '販売停止中', value: false %>
    　　　　</div>
  　　　　　</div>
　　　<% end %>
    </div>
      <div class="form-group">
        <%= f.submit "新規登録", class: 'btn btn-success btn-sm' %>
      <% end %>
    </div>
  </div>
</div>















