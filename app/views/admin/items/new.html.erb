<div class="container">
  <div class="row">
   <div class="col-sm-12 col-md-10 col-lg-7 px-5 px-sm-0 mx-auto">

    <h1>商品新規登録</h1>

    　<table class="table table-hover table-inverse">
       <tbody>
           <%= form_with model: @item, url: admin_items_path, metod: :post do |f| %>
             <tr>
                <th>商品画像</th>
              　<th><%= f.file_field :image, accept: "image/*" %></th>
             </tr>
              <tr>
               <th>商品名</th>
               <th><%= f.text_field :item_name %></th>
              </tr>
              <tr>
                <th>商品説明</th>
                <th><%= f.text_area :introduction %></th>
             </tr>
              <tr>
              　<th>ジャンル</th>
                <th><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :genre_name) %></th>
           　</tr>
             <tr>
               <th>税抜価格</th>
               <th><%= f.text_field :price %>円</th>
             </tr>
              <tr>
               <th><%= f.label :販売ステータス %></th>
          　    <th><%= f.radio_button :item_status, true %>
          　        <%= f.label :"販売中", '販売中', value: true %></th>
          　    <th><%= f.radio_button :item_status, false %>
          　        <%= f.label :"販売停止中", '販売停止中', value: false %></th>
          　 　</tr>
          　</tbody>
          </table>
           <div class="row justify-content-center">
              <div class="col-4">
                 <%= f.submit "新規登録", class: 'btn btn-success btn-lg' %>
                </div>
              </div>

           <% end %>

       </div>
      </div>
     </div>


















