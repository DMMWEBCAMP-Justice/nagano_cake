   <div class="container">
         <div class="row justify-content-center">
          <div calss="col-4">

             <div class="row justify-content-start">
               <h2 class="col-7 text-center"style="background-color: #efefef">商品新規登録</h2>
             </div>

           <%= form_with model: @item, url: admin_items_path, metod: :post do |f| %>
              <div class="form-group">
                <p>商品画像
                <%= f.file_field :image, accept: "image/*" %></p>
              </div>
              <div class="form-group">
                <p>商品名
                <%= f.text_field :item_name %></p>

              </div>
              <div class="form-group">
                <p>商品説明
                <%= f.text_area :introduction %></p>

              </div>
              <div class="form-group">
              　<p>ジャンル
              　<%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :genre_name) %></p>

             </div>
             <div class="form-group">
               <p>税抜価格
               <%= f.text_field :price %>円</p>
             </div>
             <div class="form-group">
               <h5><%= f.label :販売ステータス %> </h5>
                   <%= f.radio_button :item_status, true %>
          　        <%= f.label :"販売中", '販売中', value: true %>
          　        <%= f.radio_button :item_status, false %>
          　        <%= f.label :"販売停止中", '販売停止中', value: false %>
          　 </div>
          　 <div class="form-group">
          　<%= f.submit "新規登録", class: 'btn btn-success btn-lg' %>
          　 </div>
         <% end %>
        </div>
      </div>
     </div>





















