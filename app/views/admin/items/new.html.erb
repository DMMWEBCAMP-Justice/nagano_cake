<div class="container">
  <div class="row">
   <div class="col-sm-12 col-md-10 col-lg-7 px-5 px-sm-0 mx-auto">

    <h1>商品新規登録</h1>

           <%= form_with model: @item, url: admin_items_path, metod: :post do |f| %>
                <p>商品画像</p>
              　<p><%= f.file_field :image, accept: "image/*" %></p>
               <p>商品名</p>
               <p><%= f.text_field :item_name %></p>
                <p>商品説明</p>
                <p><%= f.text_area :introduction %></p>
              　<p>ジャンル</p>
                <p><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :genre_name) %></p>
               <p>税抜価格</p>
               <p><%= f.text_field :price %>円</p>
               <p><%= f.label :販売ステータス %></p>
          　    <p><%= f.radio_button :item_status, true %>
          　        <%= f.label :"販売中", '販売中', value: true %></p>
          　    <p><%= f.radio_button :item_status, false %>
          　        <%= f.label :"販売停止中", '販売停止中', value: false %></p>
           <div class="row justify-content-center">
              <div class="col-4">
                 <%= f.submit "新規登録", class: 'btn btn-success btn-lg' %>
                </div>
              </div>

           <% end %>

       </div>
      </div>
     </div>


















