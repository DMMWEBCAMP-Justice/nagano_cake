 <div class="col-md-8 offset-md-1">
  <h2>商品詳細</h2>
    <table class="table table-hover table-inverse">
     <thead>
      <tr>
       <th></th>
       <th>商品名</th>
       <th>商品説明</th>
       <th>ジャンル</th>
       <th>税込価格<br>（税抜価格）</th>
       <th>販売ステータス</th>
       <th colspan="2"></th>
      </tr>
     </thead>
     <tbody>
      <tr>
          <td><%= image_tag @item.get_image, size: "100x100" %></td>
          <td><%= @item.item_name %></td>
          <td><%= @item.introduction %></td>
          <td><%= @item.genre.genre_name %></td>
          <td><%= (@item.with_tax_price).floor %><br>(<%= @item.price %>)</td>
          　　　　　　　　　　　　　　　　　　　　　　　　　　　　　<!--税抜価格＝itemのprice-->
          <td><%= @item.item_status %></td>
     　 </tr>
    　</tbody>
  　</table>
  　 <%= link_to edit_admin_item_path(@item), class: 'btn btn-success btn-sm' do %>
        編集<% end %>
 </div>

