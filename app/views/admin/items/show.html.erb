

  <div class="container">
   <div class="row justify-content-center">
      <div class="col-5">


        <h2 class="col-md-5 text-center"style="background-color: #efefef">商品詳細</h2>


         <%= image_tag @item.image, size: "200x200" %>


      <table class="table table-hover table-inverse">
        <tbody>
           <!--<tr>-->
           <!--  <th><#%= image_tag @item.image, size: "100x100" %></th>-->
           <!--</tr>-->
           <tr>
              <th>商品名</th>
              <th><%= @item.item_name %></th>
           </tr>
           <tr>
              <th>商品説明</th>
              <th><%= @item.introduction %></th>
           </tr>
           <tr>
              <th>ジャンル</th>
              <th><%= @item.genre.genre_name %></th>
           </tr>
           <tr>
              <th>税込価格<br>（税抜価格）</th>
              <th><%= (@item.with_tax_price).floor %>(<%= @item.price %>)円</th>
           </tr>
           <tr>
              <th>販売ステータス</th>
              <th><% if @item.item_status==false %>
                     <%= link_to '販売停止中', admin_item_path(@item.id, item: {item_status: false}), method: :put %>
                   <% else %>
                     <%= link_to '販売中', admin_item_path(@item.id, item: {item_status: true}), method: :put %>
                   <% end %>
              </th>
              </th>
           </tr>
         </tbody>
       </table>
 　<div class="row justify-content-center">
    <div class="col-4">
       <%= link_to edit_admin_item_path(@item.id), class: 'btn btn-success btn-lg' do %>
        編集する<% end %>
     </div>
   </div>
  </div>
 </div>
</div>

