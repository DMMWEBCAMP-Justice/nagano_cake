<div class='container'>
  <div class="row">
    <div class='col'>
      <h3 class="col-4 text-center"style="background-color: #efefef">注文履歴一覧</h3>
      <table class='table table-hover table-inverse text-center'>
        <tr bgcolor="#efefef">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to admin_order_path(order.id) do %>
              <%= order.created_at.strftime('%Y/%m/%d') %>
            <% end %>
          </td>
          <td><%= order.name %></td>
          <td>
            <% sum = 0 %>
            <% order.order_details.each do |order_detail| %>
              <% sum += order_detail.amount %>
            <% end %>
            <%= sum %>
          </td>
          <td><%= order.order_status_i18n %></td>
        </tr>
        <% end %>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>