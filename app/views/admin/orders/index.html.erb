  <h1>注文履歴一覧  </h1>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
        <th colspan="5"></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><% order.create_at %></td>
          <td><% order.address %></td>
          <td><% order.item_name %></td><!--カラムにitem_nameがない。どこから引っ張てくる？-->
          <td><% order.order_status %></td>
          <td><% link_to "注文詳細", admin_order_path(order), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>