<div class='container'>
  <div class="row">
    <div class='col'>
      <h3 class="col-4 text-center"style="background-color: #efefef">注文履歴詳細</h3>
      <table class="col-10">
        <tr height="30">
          <th>購入者</th>
          <td align="right"><%= @order.end_user.last_name %><%= @order.end_user.first_name %></td>
        </tr>
        <tr height="30">
          <th>注文日</th>
          <td align="right"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr height="30">
          <th>配送先</th>
          <td align="right">〒<%= @order.postcode %><%= @order.address %></td>
        </tr>
        <tr height="30">
          <th>宛名</th>
          <td align="right"><%= @order.name %></td>
        </tr>
        <tr height="30">
          <th>支払方法</th>
          <td align="right"><%= @order.payment_method_i18n %></td>
        </tr>
        <tr height="30">
          <th>注文ステータス</th>
          <td align="right">
            <%= form_with model: @order, url: admin_order_path(@order), method: :patch, local: true do |f| %>
              <%= f.select :order_status, Order.order_statuses_i18n.invert, {prompt: false} %>
              <%= f.submit "更新" ,class: "btn btn-primary" %>
            <% end %>
          </td>
        </tr>
      </table>
      <table class='table table-hover table-inverse text-center'>
        <tr bgcolor="#efefef">
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th>制作ステータス</th>
          <th></th>
        </tr>

        <% @order_details.each do |order_detail| %>
        <tr>
          <th><%= order_detail.item.item_name %></th>
          <th><%= order_detail.item.with_tax_price %></th>
          <th><%= order_detail.amount %></th>
          <th><%= order_detail.item.with_tax_price * order_detail.amount %></th>
          <th>

            <%= form_with(model:[@order, order_detail], url: admin_order_order_detail_path(order_id: @order, id: order_detail.id), method: :patch, local: true) do |f| %>
             <%= f.select :making_status, OrderDetail.making_statuses_i18n.invert, {prompt: false} %>
             <%= f.submit "更新" ,class: "btn btn-primary" %>
            <% end %>
          </th>
          <th></th>
        <% end %>
        </tr>
      </table>
      <div>商品合計 <%= @order.total_payment - @order.shipping_cost%>円</div>
      <div>送料 <%= @order.shipping_cost %>円</div>
      <div>請求金額 <%= @order.total_payment %>円</div>
    </div>
  </div>
</div>
